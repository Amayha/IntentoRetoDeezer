<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ececec">

    <ImageButton
        android:id="@+id/ib_atras"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="7dp"
        android:background=""
        app:layout_constraintBottom_toTopOf="@+id/et_buscar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <ImageButton
        android:id="@+id/ib_menu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="320dp"
        app:layout_constraintBottom_toTopOf="@+id/et_buscar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/ic_dialog_dialer"

        android:background=""/>

    <EditText
        android:id="@+id/et_buscar"
        android:layout_width="310dp"
        android:layout_height="49dp"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="1dp"
        android:ems="10"
        android:hint="Busca la lista que quieras"
        android:textColorHint="#936262"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/ib_busqueda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ib_atras"
        />

    <ImageButton
        android:id="@+id/ib_busqueda"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_buscar"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_search_category_default"
        android:background=""/>

    <ListView
        android:id="@+id/lv_listas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="272dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ib_busqueda" />

</android.support.constraint.ConstraintLayout>